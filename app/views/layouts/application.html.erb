<!DOCTYPE html>
<html>
  <head>
    <title>Yalanotlob</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': true %>
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>  
      <%= csrf_meta_tags %>  
    <link rel="stylesheet" href="/orders/newOrder.css">
    
  </head>

  <body>
  <header>
    <nav class="navbar navbar-expand-md navbar-light sticky-top bg-white shadow-sm">
      <%# <div class="container"> %>

      <a class="navbar-brand" href="#">Yalanotlob</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <% if user_signed_in? %>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/orders">My Orders</a>
          </li>
          <li class="nav-item">
          <%= link_to "Create New Order", main_app.new_order_path, :class => 'nav-link'  %> 
           </li>
            <li class="nav-item">
          <%= link_to "Friends", main_app.new_friend_path, :class => 'nav-link'  %> 
           </li>
           <li class="nav-item">
          <%= link_to "Groups", main_app.groups_path, :class => 'nav-link'  %> 
           </li>
           
         
        </ul>
        <ul class="navbar-nav ml-auto">
         <li class="nav-item">
            <%= link_to 'Edit profile', "/users/edit", :class => 'nav-link' %>
          </li>
          
          
          <li class="nav-item">
            <%= link_to pluralize(Notification.unread_count(current_user), 'Notification' ), "/notifications", :class => 'nav-link'%> 
          </li>
          <li class="nav-item">
            <%= link_to "Sign out", "/users/sign_out", :method => :delete, :class => 'nav-link' %>
          </li>
          <li class="nav-item ">
            <strong> <%= current_user.name %></strong>
          </li>
        </ul>
        <% else %>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <%= link_to "Sign up", new_user_registration_path, :class => 'nav-link'  %>
                </li>
                <li class="nav-item">
                    <%= link_to "Login", new_user_session_path, :class => 'nav-link'  %>
                </li>
            </ul>
        <% end %>        
    </div>
    <%# </div> %>
  </nav>
</header>
<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>
    <div class="container">
      <%= yield %>
    </div>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="/js/clientRequests.js"></script> 
  </body>
</html>
