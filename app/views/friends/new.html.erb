<div class="center">
<div class="col">
    <div class="d-block form-group dropdown" style="display: block">
        <label for="friendControlInput1"><h1>Friends</h1></label>
        <% if flash[:success] %>
            <div class="alert alert-success" role="alert"><%=flash[:success]%></div>
        <% end %>
        <% if flash[:error] %>
            <div class="alert alert-danger" role="alert"><%=flash[:error]%></div>
        <% end %>
        <div id="myDropdown" class="d-block dropdown-content show row" style="display: block">
            <%= form_for Friend.new, url: friends_path, local: true do |form| %>
                <input name="email" type="text" placeholder="Your friend email..." id="myInput" onkeyup="searchByMail()" style="width: 90%">
                <%= form.submit type:'submit', class:'btn btn-primary', value: "Add friend", style: "margin: 0px"%>
            <%end%>
            <div id="results">
            </div>
        </div>
    </div>
    <hr>
    <hr>
    <hr>
    <div class="col card">
        <h3>Friends list</h3>
        <div id="friends" class="row">
            <%for friend in @friends%>
                <div class="card mb-3 friend" style="max-width: 540px;">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                        <img src="/assets/images/user.png" class="card-img" alt="...">
                        </div>
                        <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%=friend.name%></h5>
                            <p class="card-text"><%=friend.email%></p>
                            <%=link_to("Unfriend", friend_path(friend.id), method: :delete, class: "btn btn-danger")%>
                        </div>
                        </div>
                    </div>
                </div>
            <%end%>
        <div>
        
    <div>
</div>
</div>